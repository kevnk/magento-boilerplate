    <?php foreach ($_productCollection as $_product): ?>
        <li class="item<?php if( ++$_iterator == sizeof($_productCollection) ): ?> last<?php endif; ?>" <?php echo $this->helper('lucky_microdata')->microdata('offers', ($_product->getTypeId() == 'grouped' ? 'AggregateOffer' : 'Offer') ); ?>>
