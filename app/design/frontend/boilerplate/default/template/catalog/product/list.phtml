                            <?php echo $this->helper('lucky_microdata')->microdata('price', '', number_format( (float)$_startTierPrice['price'], 2 )); ?>
                            <span <?php echo $this->helper('lucky_microdata')->microdata('eligibleQuantity', 'QuantitativeValue'); ?>>
                                <?php 
                                    echo $this->helper('lucky_microdata')->microdata('minValue', '', $_startTierPrice['price_qty'] );
                                    if($_nextTierPrice) {
                                        echo $this->helper('lucky_microdata')->microdata('maxValue', '', $_nextTierPrice['price_qty'] - 1 ); 
                                    }
                                ?>
                            </span>
                        </span>
                    <?php endforeach; ?>
                <?php endif ?>

                <div class="actions">
                    <?php if($_product->isSaleable()): ?>
